<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/gmail"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginBottom="515dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="22dp"
        android:hint="@string/gmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Zagolovok"
        android:layout_width="354dp"
        android:hint="@string/Zagolovok"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_baseline_reorder_24"
        android:drawablePadding="22dp"
        android:layout_marginBottom="515dp"
        android:background="@drawable/edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp"/>

    <EditText
        android:id="@+id/Text"
        android:drawableLeft="@drawable/ic_baseline_message_24"
        android:drawablePadding="22dp"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/edit_text"
        android:hint="Введите текст"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Send"
        android:layout_width="340dp"
        android:layout_height="59dp"
        android:text="SEND"
        android:textSize="32dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="@id/Text"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@id/Text"
        app:layout_constraintTop_toTopOf="@id/Text" />


</androidx.constraintlayout.widget.ConstraintLayout>